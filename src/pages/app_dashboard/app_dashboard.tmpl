<div class="screen">
    <div class="wrapper" id="screen_wrapper">
        <div class="scroller">
            <% if(typeof app.selected_app === "undefined"){app.selected_app = app.activities.activities[0] } %>
            <div class="picture" style="background-image:url(<%= window.location.origin+'/'+app.selected_app.thumb %>)">
                <!--<div class="video_big_button"></div>-->
                <div class="cast_button"></div>
            </div>
            <h2><%= app.selected_app.label %></h2>
            <p><%= app.selected_app.desc %></p>
            <div class="label_separator">Pr√©recquis</div>
            <ul class="task_list">
                <% for(var i=0; i<app.selected_app.prerecquise.length; i++ ){ %>
                    <li><%= app.selected_app.prerecquise[i].label %><div class="radio_ui" data-checked="<%= app.selected_app.prerecquise[i].checked %>"></div></li>
                <% } %>
            </ul>
            <button id="launch_app" class="classic_button disabled">Lancer l'animation</button>
            <br/>
            <a href="#" onclick="return false;" class="hyperlink">Fiche technique de l'animation</a>
            <br/>
            <br/>
        </div>
    </div>
</div>
